<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <Button
        android:id="@+id/button__previous"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_previous" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button__previous"
        android:layout_marginTop="100dp"
        android:paddingLeft="20dp">
        <TextView
            android:id="@+id/textView_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="70dp"
            android:text="手机号"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_phone"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:text="用户名"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_username"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:text="密码"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_password"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:text="确认密码"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_password2"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:text="验证码"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="55dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="11" />

        <EditText
            android:id="@+id/editText_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_phone"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_username"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="16" />

        <EditText
            android:id="@+id/editText_password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_password"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="16" />

        <EditText
            android:id="@+id/editText_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_password2"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="number"
            android:maxLength="6" />

        <Button
            android:id="@+id/button_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="280dp"
            android:layout_toRightOf="@id/editText_code"
            android:background="@drawable/bg_btn_normal"
            android:text="发送验证码" />

        <Button
            android:id="@+id/button_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bg_btn_normal"
            android:text="注册" />

        <ImageView
            android:id="@+id/imageView_right_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="65dp"
            android:layout_toRightOf="@id/editText_phone"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_right" />

        <ImageView
            android:id="@+id/imageView_error_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/editText_phone"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_error" />

        <ImageView
            android:id="@+id/imageView_right_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/imageView_right_1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/editText_phone"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_right" />

        <ImageView
            android:id="@+id/imageView_error_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@id/imageView_error_1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/editText_phone"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_error" />

        <ImageView
            android:id="@+id/imageView_right_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/imageView_right_2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/editText_phone"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_right" />

        <ImageView
            android:id="@+id/imageView_error_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@id/imageView_error_2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/editText_phone"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_error" />

        <ImageView
            android:id="@+id/imageView_right_4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/imageView_right_3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/editText_phone"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_right" />

        <ImageView
            android:id="@+id/imageView_error_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@id/imageView_error_3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/editText_phone"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_error" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:text="填写以下信息:"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>