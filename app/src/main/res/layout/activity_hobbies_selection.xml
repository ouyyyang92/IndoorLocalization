<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <Button
        android:id="@+id/button__previous"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_previous" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:text="完成注册"
        android:drawableRight="@drawable/ic_next"
        android:background="@drawable/bg_btn_apparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/Welcome"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="20dp">

            <CheckBox
                android:id="@+id/checkBox_7"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:button="@drawable/ic_running"
                android:layout_marginTop="110dp"
                android:background="@drawable/bg_btn_hobbies_selection" />

            <CheckBox
                android:id="@+id/checkBox_6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="180dp"
                android:button="@null"
                android:drawableLeft="@drawable/ic_reading"
                android:background="@drawable/bg_btn_hobbies_selection" />

            <CheckBox
                android:id="@+id/checkBox_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:button="@drawable/ic_exercising"
                android:background="@drawable/bg_btn_hobbies_selection" />

            <CheckBox
                android:id="@+id/checkBox_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/checkBox_6"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/ic_cooking"
                android:background="@drawable/bg_btn_hobbies_selection" />

            <CheckBox
                android:id="@+id/checkBox_1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/checkBox_6"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="80dp"
                android:button="@drawable/ic_climbing"
                android:background="@drawable/bg_btn_hobbies_selection" />

            <CheckBox
                android:id="@+id/checkBox_8"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="60dp"
                android:button="@null"
                android:drawableLeft="@drawable/ic_swimming"
                android:background="@drawable/bg_btn_hobbies_selection" />

            <CheckBox
                android:id="@+id/checkBox_5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="230dp"
                android:button="@null"
                android:drawableLeft="@drawable/ic_music"
                android:background="@drawable/bg_btn_hobbies_selection" />

            <CheckBox
                android:id="@+id/checkBox_4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/checkBox_5"
                android:button="@drawable/ic_game"
                android:background="@drawable/bg_btn_hobbies_selection" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="兴趣爱好"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="70sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="20dp"
                android:letterSpacing="0.2"
                android:text="......" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Welcome"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/button_next"
        android:paddingLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择你的"
            android:layout_marginTop="60dp"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>