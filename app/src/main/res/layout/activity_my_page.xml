<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.home.MyPageActivity"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_previous" />

        <Button
            android:id="@+id/button_edit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_btn_apparent"
            android:drawableLeft="@drawable/ic_edit" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="70dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="50dp">
            <View
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:background="#000"/>
            <ImageView
                android:id="@+id/head_image"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:gravity="center"
                android:src="@drawable/ic_headimage_1" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaaaaa"
                android:textColor="#000000"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView_gender"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawablePadding="30dp"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_phone"
                android:text="hahahaaaaaa"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/ic_birth"
                android:text="hahahaaaaaa"
                android:layout_marginTop="20dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_hobbies"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/ic_hobby"
                android:layout_marginTop="20dp"
                android:text="hahahaaaaaa"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/ic_location"
                android:layout_marginTop="20dp"
                android:text="hahahaaaaaa"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/ic_email"
                android:layout_marginTop="20dp"
                android:text="hahahaaaaaaaaaaaaaaaaaaa"
                android:singleLine="true"
                android:textSize="22sp" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>