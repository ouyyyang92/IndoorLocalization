<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.contacts.FriendPageActivity"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_previous" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="70dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/head_image"
                android:background="@drawable/btn_frame"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:padding="4dp"
                android:gravity="center"
                android:src="@drawable/ic_headimage_1" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:text="名称"
                android:textColor="#000000"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView_gender"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_male_show"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawablePadding="30dp"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_phone"
                android:text="电话号码"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/ic_birth"
                android:text="生日"
                android:layout_marginTop="20dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_hobbies"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/ic_hobby"
                android:layout_marginTop="20dp"
                android:text="爱好"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/ic_location"
                android:layout_marginTop="20dp"
                android:text="地区"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:drawablePadding="30dp"
                android:drawableLeft="@drawable/ic_email"
                android:layout_marginTop="20dp"
                android:text="邮箱"
                android:singleLine="true"
                android:textSize="22sp" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_normal"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_chat"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawablePadding="10dp"
        android:text="位置共享" />

    <Button
        android:id="@+id/button_add_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_normal"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_add_friends"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawablePadding="10dp"
        android:text="添加好友" />
</RelativeLayout>